<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_graph_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.harrl7.visscan.Graphing.GraphShow">

    <ImageView
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/square"
        android:id="@+id/imgGraph"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnSendEmail"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp" />

    <Button
        android:text="Send to Email"

        android:layout_height="84dp"
        android:layout_width="300dp"
        android:textSize="24sp"
        android:id="@+id/btnSendEmail"
        android:background="@color/ButtonBlue"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imgGraph" />

    <Button
        android:text="Back to results"

        android:layout_height="wrap_content"

        android:layout_width="300dp"
        android:textSize="24sp"
        android:id="@+id/btnBackToResults"
        android:elevation="0dp"
        android:background="@color/ButtonBlue"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imgGraph"
        android:layout_below="@+id/imgGraph" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgGraph"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="74dp"
        android:id="@+id/tvUpperLeft"
        android:textSize="24sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgGraph"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="104dp"
        android:id="@+id/tvLowerLeft"
        android:textSize="24sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUpperRight"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/tvUpperLeft"
        android:layout_alignBottom="@+id/tvUpperLeft"
        android:layout_toEndOf="@+id/imgGraph" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLowerRight"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/tvLowerLeft"
        android:layout_alignBottom="@+id/tvLowerLeft"
        android:layout_toEndOf="@+id/imgGraph" />

</RelativeLayout>
