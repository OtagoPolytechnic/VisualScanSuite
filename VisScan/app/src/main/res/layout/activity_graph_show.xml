<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_graph_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.harrl7.visscan.Graphing.GraphShow"
    android:layout_alignParentBottom="false"
    android:layout_gravity="bottom">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvUpperRight"
        android:textSize="18sp"
        android:layout_alignTop="@+id/imgGraph"
        android:layout_toEndOf="@+id/imgGraph" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvUpperLeft"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/square"
        android:id="@+id/imgGraph"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btnBackToResults" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLowerLeft"
        android:textSize="18sp"
        android:layout_above="@+id/tvLowerRight"
        android:layout_alignEnd="@+id/tvUpperRight" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLowerRight"
        android:textSize="18sp"
        android:layout_above="@+id/btnBackToResults"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="23dp" />

    <Button
        android:text="Send to Email"

        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:textSize="24sp"
        android:id="@+id/btnSendEmail"
        android:background="@drawable/btn_style"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imgGraph"
        android:layout_weight="2"
        android:layout_marginTop="36dp" />

    <Button
        android:text="Back to results"

        android:layout_height="wrap_content"

        android:layout_width="300dp"
        android:textSize="24sp"
        android:id="@+id/btnBackToResults"
        android:elevation="0dp"
        android:background="@drawable/btn_style"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp" />

</RelativeLayout>
