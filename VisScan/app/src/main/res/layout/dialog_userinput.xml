<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_gravity="top">

    <Button
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/btnSubmitID"
        android:background="@drawable/btn_style"
        android:textColor="@color/white"
        android:layout_below="@+id/datePicker"
        android:layout_alignParentStart="true"

        android:text="CONFIRM DETAILS"
        android:layout_margin="16dp" />

    <TextView
        android:text=" Enter Date Of Birth Below:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvBday"
        tools:text="Enter Date Of Birth"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_marginTop="100dp"

        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tvBday"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="24sp"
        android:hint="Enter User ID Number"
        android:imeOptions="actionDone"
        android:ems="10"
        android:id="@+id/editUserID"
        android:layout_gravity="center_horizontal"
        android:textColorHint="#808080"
        android:singleLine="true"
        android:selectAllOnFocus="false"
        android:textColorLink="?attr/colorControlNormal"
        android:textColor="#757575"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvBday"
        android:layout_marginTop="25dp"
        android:textAlignment="center" />

</RelativeLayout>