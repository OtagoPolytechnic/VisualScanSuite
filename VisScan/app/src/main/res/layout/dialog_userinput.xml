<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_gravity="top">

    <Button
        android:text="Confirm details"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/btnSubmitID"
        android:background="@color/ButtonBlue"
        android:textColor="@color/white"
        android:layout_below="@+id/datePicker"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:layout_marginTop="155dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/editUserID"
        android:layout_alignStart="@+id/tvBday"
        android:layout_alignEnd="@+id/tvBday" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="24sp"
        android:hint="Enter User ID Number"
        android:imeOptions="actionDone"
        android:ems="10"
        android:id="@+id/editUserID"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColorHint="@color/colorAccent" />

    <TextView
        android:text=" Enter Date Of Birth Below:"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvBday"
        tools:text="Enter Date Of Birth"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/editUserID"
        android:layout_alignStart="@+id/editUserID" />

</RelativeLayout>