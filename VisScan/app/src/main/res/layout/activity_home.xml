<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="bit.harrl7.visscan.Activities.HomeActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <!-- Title -->

    <!-- Button to go to settings -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ButtonBluePressed"
        android:padding="8dp">

        <TextView
        android:text="test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:id="@+id/tvUserID"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal|center" />

    </LinearLayout>


    <!-- Button to go to results -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <TextView
            android:text="VISUAL TESTING SUITE"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textSize="52sp"
            android:textStyle="bold"
            android:layout_marginTop="0dp"
            android:id="@+id/tvDescription"
            android:layout_below="@+id/tvUserID"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:visibility="visible"
            android:layout_weight="1.2"
            android:gravity="fill_vertical" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="16dp">

            <Button
                android:text="Select Tool"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="46sp"

                android:background="@drawable/btn_style"
                android:textColor="@color/white"


                android:id="@+id/btnViewListOfTools"
                android:layout_above="@+id/btnViewResults"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="false" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="16dp">

            <Button
                android:text="View Results"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="46sp"

                android:background="@drawable/btn_style"
                android:textColor="@color/white"
                android:id="@+id/btnViewResults"
                android:layout_above="@+id/btnSwitchUser"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="false" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="16dp">

            <Button
                android:text="Change User"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="46sp"
                android:background="@drawable/btn_style"
                android:textColor="@color/white"
                android:id="@+id/btnSwitchUser"
                android:layout_alignParentBottom="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentEnd="false" />
        </RelativeLayout>

    </LinearLayout>

    <!-- Button to go to list of tools -->

</LinearLayout>
