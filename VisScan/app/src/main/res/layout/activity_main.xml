<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_flash_stim"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="bit.harrl7.visscan.Activities.MainActivity"
android:background="@android:color/black">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container">
</RelativeLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Paused"
    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
    android:id="@+id/tvPause"
    android:textColor="@android:color/background_light"
    android:textAlignment="center"
    android:textStyle="normal|bold"
    android:textAllCaps="true"
    android:gravity="center"/>



<LinearLayout
    android:layout_gravity="start"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:gravity="top|center_vertical">

    <Button
        android:text="Home Page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBackToHome"
        android:padding="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_style"

        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="normal"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:drawableLeft="@android:drawable/ic_menu_revert"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" />

    <Button
        android:text="Vision Tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBackToTools"
        android:padding="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_style"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="normal"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:drawableLeft="@android:drawable/ic_menu_view"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:id="@+id/tvNameOfTest"
        android:textSize="32sp"
        android:layout_marginLeft="14dp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginTop="46dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:text="Continue Test"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnStart"
        android:padding="30dp"
        android:layout_marginBottom="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="normal"
        android:background="@drawable/btn_style"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:drawableLeft="@android:drawable/ic_media_play"
        android:gravity="center"
        android:layout_gravity="center" />

    <Button
        android:text="Save Results"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btnSave"
        android:padding="30dp"
        android:drawableLeft="@android:drawable/ic_menu_save"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_style"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="normal"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:gravity="center" />

</LinearLayout>

</android.support.v4.widget.DrawerLayout>