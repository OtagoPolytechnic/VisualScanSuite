<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context="bit.harrl7.visscan.DisplayToolFrag">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text=""
        android:textAlignment="center"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescriptionTool"
        android:textColor="?attr/colorPrimary"
        android:textSize="70sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_weight="2"
        android:isScrollContainer="true"
        android:scrollIndicators="right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="To be confirmed"
                android:layout_width="match_parent"

                android:layout_height="276dp"
                android:id="@+id/tvInfoTool"
                android:layout_below="@+id/tvDescriptionTool"
                android:layout_centerHorizontal="true"
                android:textSize="36sp"
                android:typeface="sans"
                android:layout_gravity="center_horizontal"
                android:isScrollContainer="true" />

            <ImageView
                android:layout_width="497dp"
                android:layout_height="461dp"
                app:srcCompat="@drawable/smiley"
                android:id="@+id/imageView2"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:text="Start Tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/btnStartTool"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@color/ButtonBlue"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="46dp"
        android:layout_weight="0.00" />

</LinearLayout>
