<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context="bit.harrl7.visscan.DisplayToolFrag">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescriptionTool"
        android:textColor="@color/colorPrimary"
        android:textSize="70sp"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="To be confirmed"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:layout_marginTop="70dp"
        android:id="@+id/tvInfoTool"
        android:layout_below="@+id/tvDescriptionTool"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Start Tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/btnStartTool"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
